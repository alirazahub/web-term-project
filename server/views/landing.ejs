<!-- Hero Section -->
<div class="w-full">

    <input type="text" id="search-input" class="hidden outline-none bg-white w-full px-3 py-2 text-gray-800 z-50"
        placeholder="Search..." />
</div>
<header class="bg-cover bg-center relative" style="background-image: url('cover.jpeg'); height: 80vh;">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="container mx-auto flex flex-col items-center justify-center text-white h-full relative z-10">
        <h1 class="text-4xl font-semibold text-center">Discover the World of Movies</h1>
        <p class="mt-4 text-xl text-center">Your one-stop destination for movie lovers.</p>
        <a href="#features"
            class="mt-8 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded-full transition duration-300 transform hover:scale-105">Explore
            Now</a>
    </div>
</header>
<!-- Features Section -->
<section id="features" class="py-12">
    <div class="container mx-auto">
        <h2 class="text-3xl font-semibold text-center">Key Features</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
            <!-- Feature 1 -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold">Vast Movie Library</h3>
                <p class="mt-4 text-gray-600">Access a vast collection of movies from various genres.</p>
            </div>

            <!-- Feature 2 -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold">User Reviews</h3>
                <p class="mt-4 text-gray-600">Read and submit user reviews to share your thoughts on movies.</p>
            </div>

            <!-- Feature 3 -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-xl font-semibold">Personalized Recommendations</h3>
                <p class="mt-4 text-gray-600">Get personalized movie recommendations based on your preferences.</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Movies Section -->
<section id="movies" class="bg-gray-200 py-12">
    <div class="container mx-auto">
        <h2 class="text-3xl my-5 font-semibold text-center">Featured Movies</h2>
        <div class="owl-carousel owl-theme">
            <% movies?.forEach((movie)=> { %>
                <div class="item relative">
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                        <img src="/images/<%= movie?.poster%>" alt="Movie 1"
                            class="w-full h-48 object-cover">
                        <div class="p-4">
                            <h3 class="text-xl font-semibold">
                                <%= movie.name %>
                            </h3>
                            <p class="text-gray-600">
                                <%= movie.releaseDate %>
                            </p>
                            <p class="text-gray-600">
                                <%= movie.duration %>
                            </p>
                            <p
                                class="bg-green-400 border-[1px] border-green-800 text-white w-20 text-center rounded-full">
                                <%= movie.language %>
                            </p>
                            <p
                                class="bg-red-400 mt-3 border-[1px] border-green-800 text-white w-20 text-center rounded-full">
                                <%= movie.classification %>
                            </p>
                            <div class="flex justify-between">
                                <a href="<%= movie.trailer %>" target="_blank"
                                    class="mt-8 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded-full transition duration-300 transform hover:scale-105">
                                    <i class="fas fa-play text-white"></i>
                                </a>
                                <a href="/movies/<%= movie.id %>"
                                    class="mt-8 bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded-full transition duration-300 transform hover:scale-105">
                                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
</section>


<!-- Contact Section -->
<section id="contact" class="bg-blue-500 text-white py-16">
    <div class="container mx-auto">
        <h2 class="text-3xl font-semibold text-center">Contact Us</h2>
        <p class="mt-4 text-gray-200 text-center">Have questions or suggestions? Contact our support team.</p>
        <div class="mt-8 flex justify-center">
            <a href="mailto:alirazahub2@gmail.com"
                class="bg-white text-blue-500 hover:bg-gray-200 font-semibold py-2 px-6 rounded-full transition duration-300 transform hover:scale-105">Email
                Us</a>
        </div>
    </div>
</section>